{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "症狀結構定義",
  "description": "中醫症狀的標準化描述，通過證素建立關聯",
  "type": "object",
  "required": ["id", "name", "category", "related_zhengsu"],
  "properties": {
    "id": {
      "type": "string",
      "description": "唯一識別碼（symptom_ 前綴 + 拼音）"
    },
    "name": {
      "type": "string",
      "description": "症狀名稱"
    },
    "alias": {
      "type": "array",
      "items": { "type": "string" },
      "description": "別名列表"
    },
    "category": {
      "type": "string",
      "description": "症狀類別",
      "enum": ["全身症狀", "頭面症狀", "胸腹症狀", "四肢症狀", "二便症狀", "舌象", "脈象", "其他"]
    },
    "description": {
      "type": "string",
      "description": "症狀描述"
    },
    "related_zhengsu": {
      "type": "array",
      "description": "相關證素組合，按可能性排序",
      "items": {
        "type": "object",
        "required": ["zhengsu_ids", "weight"],
        "properties": {
          "zhengsu_ids": {
            "type": "array",
            "items": { "type": "string" },
            "description": "證素 ID 組合（病位 + 病性）"
          },
          "weight": {
            "type": "string",
            "enum": ["高", "中", "低"],
            "description": "該證素組合導致此症狀的可能性"
          },
          "context": {
            "type": "string",
            "description": "鑑別條件或伴隨特徵"
          }
        }
      }
    },
    "severity_levels": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "level": { "type": "string", "enum": ["輕", "中", "重"] },
          "description": { "type": "string" }
        }
      },
      "description": "嚴重程度分級"
    }
  }
}
