{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "證素結構定義",
  "description": "證素是病理狀態的最小單位（原子），證型是證素的組合",
  "type": "object",
  "required": ["id", "name", "category", "subcategory"],
  "properties": {
    "id": {
      "type": "string",
      "description": "唯一識別碼（拼音格式，如 qi_xu）"
    },
    "name": {
      "type": "string",
      "description": "證素名稱"
    },
    "category": {
      "type": "string",
      "enum": ["病位", "病性"],
      "description": "證素類別"
    },
    "subcategory": {
      "type": "string",
      "description": "子類別",
      "enum": [
        "五臟", "六腑", "特殊", "部位", "表裡", "形體",
        "氣機病變", "血液病變", "陰陽病變", "外邪", "病理產物", "精津病變", "內生病邪"
      ]
    },
    "treatment": {
      "type": "string",
      "description": "對應的標準治法（病性證素必填，病位證素留空）"
    },
    "is_critical": {
      "type": "boolean",
      "description": "是否為危重證素",
      "default": false
    },
    "alias": {
      "type": "array",
      "items": { "type": "string" },
      "description": "別名列表"
    },
    "description": {
      "type": "string",
      "description": "證素說明"
    },
    "related_symptoms": {
      "type": "array",
      "items": { "type": "string" },
      "description": "相關症狀 ID 列表"
    }
  },
  "分類參考": {
    "病位": {
      "五臟": ["心", "肝", "脾", "肺", "腎"],
      "六腑": ["胃", "膽", "小腸", "大腸", "膀胱"],
      "特殊": ["胞宮", "精室"],
      "部位": ["胸膈", "少腹"],
      "表裡": ["表", "半表半裡"],
      "形體": ["肌膚", "經絡", "筋骨"]
    },
    "病性": {
      "氣機病變": ["氣虛", "氣滯", "氣逆", "氣陷", "氣閉", "不固", "氣脫"],
      "血液病變": ["血虛", "血瘀", "血熱", "血寒", "動血"],
      "陰陽病變": ["陰虛", "陽虛", "陽亢", "陽浮", "亡陰", "亡陽"],
      "外邪": ["風", "寒", "暑", "濕", "燥", "火", "毒"],
      "病理產物": ["痰", "飲", "水停", "膿", "食積", "蟲積"],
      "精津病變": ["津虧", "精虧"],
      "內生病邪": ["動風"]
    }
  },
  "治法對應表": {
    "風": "祛風",
    "寒": "散寒",
    "熱": "清熱",
    "濕": "化濕",
    "燥": "潤燥",
    "火": "瀉火",
    "痰": "化痰",
    "飲": "化飲",
    "水停": "利水",
    "毒": "解毒",
    "氣虛": "補氣",
    "氣滯": "行氣",
    "氣逆": "降氣",
    "氣陷": "升提",
    "氣閉": "開閉",
    "不固": "收攝",
    "氣脫": "固脫",
    "血虛": "補血",
    "血瘀": "活血",
    "血熱": "涼血",
    "血寒": "溫經",
    "動血": "止血",
    "陰虛": "滋陰",
    "陽虛": "溫陽",
    "陽亢": "平肝潛陽",
    "陽浮": "引火歸元",
    "亡陰": "救陰",
    "亡陽": "回陽",
    "動風": "熄風",
    "津虧": "生津",
    "精虧": "填精",
    "食積": "消食",
    "蟲積": "驅蟲",
    "膿": "排膿"
  }
}
